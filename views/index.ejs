<%- include('partials/header.ejs') %>

<section class="heading-section">
  <h1 class="text-white z-1 display-2 fw-semibold">My Blogs</h1>
</section>

<section>
  <div id="all-posts-con" class="container rounded-3 p-5">
    <div class="d-flex justify-content-center flex-wrap">
      <% if (allPosts.length > 0) { %>
        <% allPosts.forEach(post => { %>
          <div class="card border-secondary p-4 rounded-3 mx-2">
            <div class="card-header">By <%= post.author %> on <%= post.date %></div>
            <div class="card-body">
              <h3 class="card-title"><%= post.title %></h3>

              <a href="/post/<%= post.id %>" class="link-info link-offset-2 link-underline-opacity-50">view post</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="h5">There are no posts yet. Create a post.</p>
      <% } %>
    </div>
  </div>
</section>

<%- include('partials/footer.ejs') %>