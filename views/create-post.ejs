<%- include('partials/header.ejs') %>

<section class="heading-section-2">
  <h1 class="text-white z-1 display-3 fw-semibold">Create a Post</h1>
</section>

<section>
  <form action="/create-post" method="POST" id="create-form" class="container-md my-5 rounded-3 p-5">
    <div class="mb-3">
      <label for="author" class="form-label">Author</label>
      <input type="text" name="author" id="author" class="form-control">
    </div>

    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="title" id="title" class="form-control">
    </div>

    <div class="mb-3">
      <label for="post" class="form-label">Post</label>
      <textarea name="post" id="post" cols="80" rows="10" class="form-control"></textarea>
    </div>

    <input type="submit" value="Create Post" class="btn btn-primary">
  </form>
</section>

<%- include('partials/footer.ejs') %>